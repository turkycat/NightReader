<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:padding="2dp"
    android:dividerPadding="2dp"
    android:orientation="vertical"
    android:background="@color/CustomBlue" >
         

        <TextView
            android:id="@+id/dialog_title"
            style="?android:attr/buttonBarButtonStyle"
            android:background="@android:color/black"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/CustomBlue"
            android:textSize="18sp"
            android:text="@string/app_name" />

        <TextView
            android:id="@+id/dialog_textArea"
            style="?android:attr/buttonBarButtonStyle"
            android:background="@android:color/black"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="12dp"
			android:gravity="left"
            android:text="@string/dialog_body" />

        <TextView
            android:id="@+id/dialog_textArea2"
            style="?android:attr/buttonBarButtonStyle"
            android:background="@android:color/black"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="12dp"
			android:gravity="left"
            android:text="@string/dialog_body2" />

        <TextView
            android:id="@+id/dialog_textArea3"
            style="?android:attr/buttonBarButtonStyle"
            android:background="@android:color/black"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="12dp"
			android:gravity="left"
            android:layout_marginBottom="4dp"
            android:text="@string/dialog_body3" />

        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:background="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/Button01"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="closeDialog"
                android:text="@string/dialog_confirm" />
        </LinearLayout>

        <requestFocus />
<!--     </LinearLayout> -->

</LinearLayout>